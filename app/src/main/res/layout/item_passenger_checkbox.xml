<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">


    <CheckBox
        android:id="@+id/passengerCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_car"
        android:checked="false"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:textSize="8sp"
        app:centerIfNoTextEnabled="true"
        app:flow_horizontalBias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passengerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/passengerCheckbox"
        app:layout_constraintEnd_toEndOf="@id/passengerCheckbox"
        app:flow_horizontalBias="0.5"
        app:layout_constraintTop_toBottomOf="@id/passengerCheckbox"
        android:text="Francesca">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>

