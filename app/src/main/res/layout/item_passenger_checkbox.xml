<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecord"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="0.0"
        app:layout_constraintHorizontal_bias="0.555"
        app:flow_horizontalBias="0.5"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivPassenger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toTopOf="@id/passengerName">
    </ImageView>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/passengerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/cardRecord"
        app:layout_constraintEnd_toEndOf="@id/cardRecord"
        app:flow_horizontalBias="0.5"
        app:layout_constraintTop_toBottomOf="@id/cardRecord"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Francesca">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>

